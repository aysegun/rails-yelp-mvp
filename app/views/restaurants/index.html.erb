<p style="color: green"><%= notice %></p>

<h1>Restaurants</h1>

<div id="restaurants">
    <% @restaurants.each do |restaurant| %>
    <div>
      <%= render restaurant %>
    <p class= "items">
      <%= link_to "Show this restaurant", restaurant, class: "btn btn-secondary" %>
    </p>
    </div>
    <% end %>
</div>

<div class= "new-link">
  <%= link_to "New restaurant", new_restaurant_path, class: "btn btn-primary" %>
</div>
